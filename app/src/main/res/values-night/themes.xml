<resources xmlns:tools="http://schemas.android.com/tools">

    <!--                                 Base application theme                               -->

    <style name="Theme.Befit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/gray</item>
    </style>

    <!--    <style name="Theme.Launcher" parent="Theme.SplashScreen">-->
    <!--        <item name="windowSplashScreenBackground">@color/white</item>-->
    <!--        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>-->
    <!--        <item name="postSplashScreenTheme">@style/Theme.Befit</item>-->
    <!--    </style>-->

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/green</item>
    </style>

    <!--                                     common style                                     -->

    <style name="EdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/bg_white_10</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>-->
    </style>

    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="drawableTintMode">@color/black</item>
    </style>

    <!--                                authorization button style                            -->

    <style name="AuthorizationButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_bg_birch_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AuthorizationButtonStyleWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_bg_birch_stroke_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>